<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>email_name_comb</fullName>
    <active>true</active>
    <errorConditionFormula>if(NOT(ISBLANK(Email__c)),NOT(CONTAINS(LOWER(Email__c),LOWER(Name))),false)</errorConditionFormula>
    <errorDisplayField>Email__c</errorDisplayField>
    <errorMessage>Email cannot be without contains Email Name</errorMessage>
</ValidationRule>
