<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>partner_name_blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND(isMarried__c = True, ISBLANK(Partner_Name__c))</errorConditionFormula>
    <errorDisplayField>Partner_Name__c</errorDisplayField>
    <errorMessage>Partner Name can not be blank in case of isMarried</errorMessage>
</ValidationRule>
